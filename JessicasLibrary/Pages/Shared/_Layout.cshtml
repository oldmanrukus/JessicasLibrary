@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    // Compute displayName if signed in
    string displayName = "";
    if (SignInManager.IsSignedIn(User))
    {
        var fn = User.Claims.FirstOrDefault(c => c.Type == "FirstName")?.Value;
        displayName = !string.IsNullOrEmpty(fn)
            ? fn
            : UserManager.GetUserName(User);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] – Jessica’s Library</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
        rel="stylesheet" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" asp-page="/Books/Shelf">Jessica’s Library</a>
      <button class="navbar-toggler" type="button"
              data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent" aria-expanded="false"
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Books/Shelf">@displayName</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-page="/Options">Options</a>
                </li>
                        @if (User.IsInRole("Admin"))
                        {
                      <li class="nav-item">
                        <a class="nav-link" asp-page="/Admin/Index">Admin</a>
                      </li>
                        }
                <li class="nav-item">
                  <form method="post"
                        asp-area="Identity"
                        asp-page="/Account/Logout"
                        class="d-inline">
                    <button type="submit"
                            class="nav-link btn btn-link">
                      Logout
                    </button>
                  </form>
                </li>
                    }
                    else
                    {
                <li class="nav-item">
                  <a class="nav-link"
                     asp-area="Identity"
                     asp-page="/Account/Login">
                    Login
                  </a>
                </li>
                    }
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
        @RenderBody()
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
  </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
